<!-- Portfolio Modals-->
<!-- Portfolio item 1 modal popup-->
<% for (let i = 0; i < photos.length; i++) { %>
<div class="portfolio-modal modal fade"  tabindex="-1" id="modal_<%= photos[i]._id%>" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="close-modal" data-bs-dismiss="modal"><img src="assets/img/close-icon.svg" alt="Close modal" />
            </div>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <div class="modal-body">
                            <!-- Project details-->
                            <h2 class="text-uppercase"><%= photos[i].title %></h2>
                            <p class="item-intro text-muted">Lorem ipsum dolor sit amet consectetur.</p>
                            <img class="img-fluid d-block mx-auto" src="<%= photos[i].image %>" alt="Image" />
                            <p><%= photos[i].description %></p>
                            <ul class="list-inline">
                                <li>
                                    <strong>Client:</strong>
                                    Threads
                                </li>
                                <li>
                                    <strong>Category:</strong>
                                    Illustration
                                </li>
                            </ul>
                            <a  href="/photos/<%= photos[i]._id %>?_method=DELETE" class="btn btn-danger btn-xl text-uppercase" 
                                onclick="return confirm('ARE YOU SURE ?')"><span>Delete Photo</span>
                            </a>
                            
                            <a class="btn btn-primary btn-xl text-uppercase" data-bs-dismiss="modal" type="button">
                                <i class="fas fa-times me-1"></i>
                                Close Project
                            </a>
                            <a href="/photos/edit/<%= photos[i]._id %>" class="btn btn-info btn-xl text-uppercase ">
                                Update Project
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>