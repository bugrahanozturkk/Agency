<!-- Contact-->
<section class="page-section" id="contact">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Add Photo</h2>
            <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
        </div>

        <form id="contactForm" class="tm-contact-form" method="POST" action="/photos" encType="multipart/form-data">
            <div class="row align-items-stretch mb-5">
                <div class="col-md-6 offset-3">
                    <div class="form-group">
                        <!-- Name input-->
                        <input class="form-control rounded-0" name="title"type="text" placeholder="Photo Title" required/>
                        <div class="invalid-feedback" data-sb-feedback="name:required">A name is required.</div>
                    </div>
                    <div class="form-group">
                        <!-- Email address input-->
                        <input class="form-control rounded-0" name="description" type="text" placeholder="Photo Description">
                    </div>
                        <input type="file" name="image" class="form-control-file offset-0">
                </div>
            </div>

            <!-- Submit Button-->
            <div class="text-center"><button class="btn btn-primary btn-xl " id="submitButton"
                    type="submit">ADD PHOTO</button></div>
        </form>
    </div>
</section>